{
  "manifest_version": 3,
  "name": "Sentiment Analyzer",
  "version": "1.0.0",
  "description": "Analyze sentiment of selected or typed text using a local Flask API.",
  "action": {
    "default_title": "Sentiment Analyzer",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*"
  ]
}
